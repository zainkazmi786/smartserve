{
	"info": {
		"_postman_id": "smart-cafe-user-api",
		"name": "Smart Cafe - User Management API",
		"description": "Complete API collection for User Management module including Authentication, Authorization, Profile Management, and User Administration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"manager@cafe.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/login",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "login"]
						},
						"description": "Login with email or phone and password. Returns JWT token and user data."
					},
					"response": []
				},
				{
					"name": "Login with Phone",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phone\": \"+1234567890\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/login",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "login"]
						}
					},
					"response": []
				},
				{
					"name": "Register (Customer)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"customer@example.com\",\n  \"phone\": \"+1234567891\",\n  \"password\": \"password123\",\n  \"cafeId\": \"{{cafe_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/register",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "register"]
						},
						"description": "Customer self sign-up. If only one cafe exists, cafeId is optional."
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "logout"]
						},
						"description": "Logout user. Token removal is handled client-side."
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for login, register, and logout"
		},
		{
			"name": "Profile Management",
			"item": [
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "profile"]
						},
						"description": "Get logged-in user's profile with role and cafes"
					},
					"response": []
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"newemail@example.com\",\n  \"phone\": \"+1234567892\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "profile"]
						},
						"description": "Update own profile. Name, email, and phone can be updated."
					},
					"response": []
				}
			],
			"description": "Profile management endpoints"
		},
		{
			"name": "Cafe Association",
			"item": [
				{
					"name": "Get User Cafes",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/cafes",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "cafes"]
						},
						"description": "Get all cafes associated with the logged-in user"
					},
					"response": []
				},
				{
					"name": "Switch Active Cafe",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cafeId\": \"{{cafe_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/cafes/switch",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "cafes", "switch"]
						},
						"description": "Switch active cafe context. Returns new token with updated activeCafeId."
					},
					"response": []
				}
			],
			"description": "Cafe association and switching endpoints"
		},
		{
			"name": "User Management",
			"item": [
				{
					"name": "List Users",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users?role=manager&cafe={{cafe_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "users"],
							"query": [
								{
									"key": "role",
									"value": "manager",
									"description": "Filter by role (superadmin only)"
								},
								{
									"key": "cafe",
									"value": "{{cafe_id}}",
									"description": "Filter by cafe (superadmin only)"
								}
							]
						},
						"description": "List users. Managers see only their cafe users. Super admin can filter by role and cafe."
					},
					"response": []
				},
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"New Staff Member\",\n  \"email\": \"staff@cafe.com\",\n  \"phone\": \"+1234567893\",\n  \"password\": \"tempPassword123\",\n  \"roleName\": \"receptionist\",\n  \"cafes\": [\"{{cafe_id}}\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users",
							"host": ["{{base_url}}"],
							"path": ["api", "users"]
						},
						"description": "Create new user. Managers can only assign their cafe. Super admin can assign any cafe. If password not provided, temporary password is generated."
					},
					"response": []
				},
				{
					"name": "Update User Role",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"roleName\": \"manager\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/:id/role",
							"host": ["{{base_url}}"],
							"path": ["api", "users", ":id", "role"],
							"variable": [
								{
									"key": "id",
									"value": "{{user_id}}"
								}
							]
						},
						"description": "Update user role. Super Admin only. Cannot change own role to manager."
					},
					"response": []
				},
				{
					"name": "Remove User From Cafe",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/:id/cafe/:cafeId",
							"host": ["{{base_url}}"],
							"path": ["api", "users", ":id", "cafe", ":cafeId"],
							"variable": [
								{
									"key": "id",
									"value": "{{user_id}}"
								},
								{
									"key": "cafeId",
									"value": "{{cafe_id}}"
								}
							]
						},
						"description": "Remove user from a cafe. Managers can only remove from their cafe."
					},
					"response": []
				},
				{
					"name": "Update User Status",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"inactive\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/:id/status",
							"host": ["{{base_url}}"],
							"path": ["api", "users", ":id", "status"],
							"variable": [
								{
									"key": "id",
									"value": "{{user_id}}"
								}
							]
						},
						"description": "Activate or deactivate user. Managers can only manage users from their cafe. Cannot deactivate self."
					},
					"response": []
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "users", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{user_id}}"
								}
							]
						},
						"description": "Delete user. Managers can only delete users from their cafe. Cannot delete self."
					},
					"response": []
				}
			],
			"description": "User management endpoints (Manager and Super Admin only)"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		},
		{
			"key": "cafe_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	]
}
